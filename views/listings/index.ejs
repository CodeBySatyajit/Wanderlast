<% layout("layouts/boilerplate.ejs") %>
<body>
  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      margin-bottom: 1rem;
      align-items: center;
      justify-content: space-between;
    }

    .filter {
      margin-right: 1rem;
      opacity: 0.7;
      text-align: center;
    }

    .filter p {
      font-size: 0.8rem;
      margin-bottom: 0.1rem;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    .tax-info {
      font-size: 0.9rem;
      color: gray;
      display: none;
    }
    .tax-toggle {
      border: 1px solid black;
      border-radius: 0.9rem;
      padding-left: 0.5rem !important;
      padding-right: 3rem !important;
      padding-top: 0.7rem !important;
      padding-bottom: 0.7rem !important;
      height: 3rem;
      align-items: center;
    }
    #filter-box {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }
  </style>

  <div id="filters">
    <div id="filter-box">
      <div class="filter" data-filter="Trending">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter" data-filter="Rooms">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter" data-filter="City">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>City</p>
      </div>
      <div class="filter" data-filter="Mountain">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountain</p>
      </div>
      <div class="filter" data-filter="Castle">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castle</p>
      </div>
      <div class="filter" data-filter="Amazing Pools">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </div>
      <div class="filter" data-filter="Beach">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
      </div>
      <div class="filter" data-filter="Camping">
        <div><i class="fa-solid fa-tents"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter" data-filter="Farm">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farm</p>
      </div>
      <div class="filter" data-filter="Arctic">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
    </div>
    <div class="form-check-reverse form-switch tax-toggle">
      <input
        class="form-check-input"
        type="checkbox"
        id="flexSwitchCheckChecked"
      />
      <label class="form-check-label" for="flexSwitchCheckChecked"
        >Display total after taxes</label
      >
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4">
    <% for(let listing of listings) { %>
    <a class="listing-link" href="/listings/<%= listing.id %>">
      <div class="card">
        <div class="card">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="<%= listing.title %>"
          />
          <div class="card-img-overlay"></div>
        </div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br />
            &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") :
            "Price not available" %> /night
            <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
  <script src="/js/filter.js"></script>
  <script>
    let taxSwitch = document.getElementById("flexSwitchCheckChecked");

    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (info of taxInfo) {
        if (info.style.display == "inline") {
          info.style.display = "none";
        } else {
          info.style.display = "inline";
        }
      }
    });
  </script>
</body>
