<% layout('layouts/boilerplate.ejs') %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3><%= listing.title %></h3>
      <div class="col-md-6">
        <div class="card">
          <img src="<%= listing.image.url %>" class="show-img" alt="..." />
          <div class="card-body">
            <p>Owner: <%= listing.owner.username %></p>
            <p><%= listing.description %></p>
            <p><%= listing.category %></p>
            <p>
              &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN")
              : "Price not available" %> /night
            </p>
            <p><%= listing.location%></p>
            <p><%= listing.country %></p>
          </div>
        </div>
      </div>

      <% if (currentUser && currentUser.id.toString() === listing.owner._id.toString()) { %>
      
      <div class="btn-2">
        <div class="edit-btn">
          <button>
            <a href="/listings/<%=listing._id%>/edit">Edit</a>
          </button>
        </div>
        <div class="delete-btn">
          <form
            method="post"
            action="/listings/<%=listing._id%>?_method=DELETE"
          >
            <button>Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <div class="col-8 offset-2">
    <hr />

    <% if (currentUser) { %>
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-2 mt-2">
        <label for="Rating">Rating</label>
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-2 mt-2">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          id="comment"
          name="review[comment]"
          rows="4"
          cols="50"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please provide a valid comment.</div>
      </div>
      <div class="mb-3 mt-2">
        <button type="submit" class="btn-outline-dark">Submit</button>
      </div>
    </form>
    <% } else { %>
    <p><a href="/login">Log in</a> to leave a review.</p>
    <% } %>
    <hr />
    <h4>All Reviews</h4>
    <div class="reviews-box">
      <% if(listing.reviews.length === 0) { %>
      <p>No reviews yet. Be the first to review!</p>
      <% } else { %> <% listing.reviews.forEach(review => { %>
      <div class="review">
        <p>
          <i class="fa-solid fa-circle-user"></i> <%= review.author.username %>
        </p>
        <p class="starability-result" data-rating="<%= review.rating %>">
          Rated: <%= review.rating %> stars
        </p>
        <strong>Comment:</strong> <%= review.comment %><br />
        <strong>Posted on:</strong> <%= review.createdAt.toDateString() %><br />
        <br />
        <form
          method="post"
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        >
          <button class="btn-delete-review dark">Delete</button>
        </form>
      </div>
      <% }) %> <% } %>
    </div>
  </div>
  <div class="col-8 offset-2 mb-2">
    <h3>Where you'll be</h3>
    <div class="map" id="map"></div>
  </div>
  <script src="/js/map.js"></script>
</body>
